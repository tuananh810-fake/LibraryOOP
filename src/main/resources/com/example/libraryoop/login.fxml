<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="250" prefWidth="300.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryoop.controller.LoginController">

    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="15.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 20px;" text="Library Login" />

        <TextField fx:id="usernameField" maxWidth="250" promptText="Username" />
        <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password" />

        <Button maxWidth="100" onAction="#handleLogin" text="Login" />

        <Label fx:id="errorLabel" textFill="red" visible="false" />
    </VBox>
</AnchorPane>
